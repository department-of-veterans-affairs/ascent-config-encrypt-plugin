<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>gov.va.ascent.maven.plugins</groupId>
	<artifactId>project-to-test</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>gov.va.ascent.maven.plugins</groupId>
				<artifactId>ascent-jsr303keygen-maven-plugin</artifactId>
				<version>${project.version}</version>
				<configuration>
					<!-- use Maven properties in real implementation, don't hardcode -->
					<asecentJsr303KeyGenDescriptorFile>src/test/resources/exampleJson_AscentJsr303KeyGenDescriptor_customMessageBundles.txt</asecentJsr303KeyGenDescriptorFile>
					<ascentJsr303KeyGenOutputFile>target/ext-docs/errorkeys.html</ascentJsr303KeyGenOutputFile>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>keygen</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>